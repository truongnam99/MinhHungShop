@{
    Layout = "_Layout";
    ViewData["Title"] = "Products Page";
}

<div class="container-fluid mt-4">
    <div class="card mb-4">
        <div>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" href="/Products">Sản phẩm</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ProductCategories">Danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Producers">Nhà cung cấp</a>
                        </li>
                    </ul>
                    <form asp-action="Index" class="form-inline my-2 my-lg-0" method="get">
                        <input class="form-control mr-sm-2" id="searchText" name="searchText" type="text" placeholder="Tìm kiếm" aria-label="Search" value=@ViewBag.searchText>
                        <input class="btn btn-outline-light my-2 my-sm-0" type="submit" value="Tìm kiếm"/>
                    </form>
                </div>
            </nav>
        </div>
    </div>

    <div class="mb-4">
        @RenderBody()
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}