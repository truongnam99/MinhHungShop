@model DataAccess.Entities.Product
@using DataAccess.Entities
@using AdminApp.Models
@{
    Layout = "_Layout";
    List<Product> products = ViewBag.TopProducts;
    List<object> orderByMonth = ViewBag.OrderByMonth;

    List<string> labels = new List<string>();
    List<int> datas = new List<int>();
    foreach (dynamic item in orderByMonth)
    {
        labels.Add(item["CreatedMonth"]);
        datas.Add(item.Count);
    }
}


<div class="container-fluid mt-4">
    <div class="card mb-4">
        <div class="col-md-12 mt-4">
            <div class="row">
                <div class="col-md-6">
                    <div>Top bán chạy</div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên</th>
                                <th scope="col">Giá</th>
                                <th scope="col">Nhà cung cấp</th>
                                <th scope="col">Loại sơn</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                for (int i = 0; i < products.Count; i++)
                                {
                                    <tr>
                                        <th scope="row">@(i + 1)</th>
                                        <td>@products.ElementAt(i).Name</td>
                                        <td>@products.ElementAt(i).Price</td>
                                        @*<td>@products.ElementAt(i).Producer.Name</td>
                                        <td>@products.ElementAt(i).Category.Name</td>*@
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
                <div class="col-md-6">
                    <div>Số lượng đơn hàng trong 6 tháng</div>
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
        <script crossorigin="anonymous">
            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ["Red", "Blue", "Yellow", "Green", "Purple", "Orange"],
                    datasets: [{
                        label: '# of Votes',
                        data: [12, 19, 3, 5, 2, 3],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255,99,132,1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });

        </script>
    </div>

</div>