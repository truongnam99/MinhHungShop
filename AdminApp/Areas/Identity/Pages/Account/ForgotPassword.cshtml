@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div style="height: 100vh;display: flex;flex-direction: column;justify-content: center;background-color: #eaf2f9;">
    <div style="display: flex;justify-content: center;">
        <div class="col-md-3" style="padding: 8px 16px;background-color: #fff;border-radius: 4px;box-shadow: 0px 1px 2px 1px #bfbfbf;">
            <h2>@ViewData["Title"]</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
